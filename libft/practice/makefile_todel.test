CC = gcc
CFLAGS = -Wall -Wextra -Werror
RM = rm -f
FILES =	ft_isalpha	\
		ft_isdigit	\
		ft_isalnum	\
		ft_isascii	\
		ft_isprint	\
		ft_toupper	\
		ft_tolower	\

SRCSDIR = ./
SRCS = $(addprefix $(SRCSDIR), $(addsuffix .c, $(FILES)))

OBJSDIR = ./
OBJS = $(addprefix $(OBJSDIR), $(addsuffix .o, $(FILES)))

all : $(FILES)

## *Pattern Rule*
$(FILES) : % : %.c
		$(CC) $(CFLAGS) $< -o $@

$(FILES).c : %.c : libft.h

clean :
	$(RM) $(FILES)

